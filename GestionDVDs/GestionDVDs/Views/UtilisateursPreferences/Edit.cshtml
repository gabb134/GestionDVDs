@model GestionDVDs.Models.UtilisateursPreferences

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>UtilisateursPreferences</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UtilisateurId" />
            <input type="hidden" asp-for="PreferenceId" />
            <div class="form-group">
                <label asp-for="Valeur" class="control-label"></label>

                <span asp-validation-for="Valeur" class="text-danger"></span>
                @Html.Raw(ViewData["Chiffres"])
               @if(ViewData["valide"].ToString()=="true"){ 
                @Html.DropDownListFor(m => m.Valeur, new SelectList((System.Collections.IEnumerable)ViewData["Liste"], "Value", "Text"), new { @class = "form-control" })
               }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
