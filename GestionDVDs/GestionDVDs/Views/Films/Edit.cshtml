            <div class="form-group">
                <label asp-for="Xtra" class="control-label"></label>
                <input asp-for="Xtra" class="form-control" />
                <span asp-validation-for="Xtra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-default" />
            </div>
        </form>
    </div>
